<%- include('./layouts/admin_header.ejs'); %>

  <div class="main">
    <%- include('./layouts/admin_navbar.ejs'); %>
    <div class="container-fluid">
      <div class="page-title">
        <h1>分类目录</h1>
      </div>
      <!-- 有错误信息时展示 -->
      <div class="alert alert-danger" style='display:none;width:300px'>
        <strong>错误！</strong><span>发生XXX错误</span>
      </div>
      <div class="row">
        <div class="col-md-4">
          <form>
            <h2>添加新分类目录</h2>
            <!-- 添加一个隐藏域，存储编辑数据时的分类id 
            获取表单元素的值的方式一般常见有三种-->
            <input type="hidden" id="id" name="id">
            <div class="form-group">
              <label for="name">名称</label>
              <input id="name" class="form-control" name="name" type="text" placeholder="分类名称">
            </div>
            <div class="form-group">
              <label for="slug">别名</label>
              <input id="slug" class="form-control" name="slug" type="text" placeholder="slug">
              <p class="help-block">https://zce.me/category/<strong>slug</strong></p>
            </div>
            <div class="form-group">
              <input type='button' class="btn btn-primary btn-add btnAdd" value='添加'>
              <input type='button' class="btn btn-primary btn-editsubmit btnEdit" value='编辑'>
            </div>
          </form>
        </div>
        <div class="col-md-8">
          <div class="page-action">
            <!-- show when multiple checked -->
            <a class="btn btn-danger btn-sm dels btndels" href="javascript:;" style="display: none;width:100px" >批量删除</a>
          </div>
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th class="text-center" width="40">
                <input type="checkbox" class='selectAll btnAll'></th>
                <th>名称</th>
                <th>目录</th>
                <th class="text-center" width="100">操作</th>
              </tr>
            </thead>
            <tbody>

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <!-- template-native.js:原生写法：<%%> -->
  <!-- template.js :简写语法：{{}}-->
 <script type="text/template" id="categoriesTemp">
  {{each list as value index}}
  <tr>
    <td class="text-center" width="40">
    <input type="checkbox" class='selectAll btnone' data-id='{{value.id}}'></td>
    <td>{{value.name}}</td>
    <td>{{value.slug}}</td>
    <td class="text-center">
      <a href="javascript:;" data-id="{{value.id}}" data-name="{{value.name}}" data-slug="{{value.slug}}" class="btn btn-info btn-xs btn-eidt">编辑</a>
      <a href="javascript:;" class="btn btn-danger btn-xs btn-add btn-del" data-id ="{{value.id}}">删除</a>
    </td>
  </tr>
  {{/each}}
</script>
  <script src="/assets/vendors/template/template.js"></script>
  <script src="/assets/js/categories.js"></script>

  <%- include('./layouts/admin_aside.ejs'); %>

  <%- include('./layouts/admin_footer.ejs'); %>
 
