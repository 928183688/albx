<%- include('./layouts/admin_header.ejs') %>

  <div class="main">
    <%- include('./layouts/admin_navbar.ejs') %>
    <div class="container-fluid">
      <div class="page-title">
        <h1>所有文章</h1>
        <a href="post-add.html" class="btn btn-primary btn-xs">写文章</a>
      </div>
      <!-- 有错误信息时展示 -->
      <div class="alert alert-danger" style="display: none">
        <strong>错误！</strong>  <span>发生XXX错误</span> 
      </div>
      <div class="page-action">
        <!-- show when multiple checked -->
        <a class="btn btn-danger btn-sm btn-alldel" href="javascript:;" style="display: none;width: 100px" >批量删除</a>
        <form class="form-inline">
          <select name="" class="form-control input-sm searchCateList">
           
         
          </select>
          <select name="" class="form-control input-sm statusList">
            <option value="">所有状态</option>
            <option value="drafted">草稿</option>
            <option value="published">已发布</option>
          </select>
          <input type='button' class="btn btn-default btn-sm btn-search" value='筛选'>
        </form>
        <ul class="pagination pagination-sm pull-right" style='float:right'>
          
        </ul>
      </div>
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th class="text-center" width="40"><input type="checkbox" class="chk"></th>
            <th>标题</th>
            <th>作者</th>
            <th>分类</th>
            <th class="text-center">时间</th>
            <th class="text-center">状态</th>
            <th class="text-center" width="100">操作</th>
          </tr>
        </thead>
        <tbody>
   
        </tbody>
      </table>
    </div>
  </div>

  <%- include('./layouts/admin_aside.ejs') %>

  <%- include('./layouts/admin_footer.ejs') %>
  <!-- 添加文章列表模板 -->
  <script type="text/template" id="postListTemp">
    {{each data as value index}}
    <tr>
      <td class="text-center"><input type="checkbox" class='btnone' data-id={{value.id}}></td>
      <td>{{value.title}}</td>
      <td>{{value.nickname}}</td>
      <td>{{value.catename}}</td>
      <td class="text-center">{{value.created}}</td>
      <td class="text-center">{{value.status=='published'?'已发布':value.status=='drafted'?'草稿':'未发布'}}</td>
      <td class="text-center">
        <a href="/admin/post-add?id={{value.id}}" class="btn btn-default btn-xs btn-edit">编辑</a>
        <a href="javascript:;" class="btn btn-danger btn-xs btn-del"  data-id="{{value.id}}">删除</a>
      </td>
    </tr>
    {{/each}}
  </script>
  <script src="/assets/vendors/bootstrappaginator/bootstrap-paginator.min.js"></script>
  <script src="/assets/vendors/template/template.js"></script>
  <script src="/assets/js/posts.js"></script>
  <script src="/assets/vendors/moment/moment.js"></script>
